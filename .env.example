# for_local|for_production

ENV=dev|test|prod
BLOCKING_PARANOIA=0|1|2|3 # 0 - off; 1 - minimum level; 3 - max level
THIS_SERVICE_DOMAIN=http://localhost:8083

HTTP_HOST=localhost|0.0.0.0
HTTP_PORT=8083
HTTP_READ_TIMEOUT=15s
HTTP_WRITE_TIMEOUT=15s
HTTP_TIMEOUT=4s
HTTP_IDLE_TIMEOUT=60s

DB_DRIVER=postgres
DB_HOST=localhost|ast-db
DB_PORT=5489|5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=postgres

CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_OPTIONS_PASSTHROUGH=true
CORS_EXPOSED_HEADERS=*
CORS_DEBUG=false

GOOSE_DRIVER=${DB_DRIVER}
GOOSE_DBSTRING=${DB_DRIVER}://${DB_USERNAME}:${DB_PASSWORD}@ast-db:5432/${DB_DATABASE}
GOOSE_MIGRATION_DIR=./migrations

DB_LOCAL_BACKUP_OWNER=user
DB_LOCAL_BACKUP_PATH=/path/to/backup

FILE_UPLOAD_MAX_SIZE=20 #MB
FILE_UPLOAD_PLACE=local|s3

S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_ACCESS_KEY=
S3_USE_SSL=true|false
S3_BUCKET_NAME=
S3_LOCATION=